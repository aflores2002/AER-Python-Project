import pandas as pd

data = ["Metals"]                                            # Used to choose what data to extract

original = pd.read_csv("sampleDataset.csv", index_col=False) # Reads original CSV file

filtered = original[original['Industry Sector'].isin(data)]  # Filter to only show data which is in Metals Industry Sector

filtered.to_csv("Filtered sampleDataset.csv")                # makes filtered data into a CSV file located in project folder

print(filtered)                                              # prints filtered data

# This is a stepping stone to a possible solution, must implement new data when given Motec CSV files
# This code extracts all pieces of data from the sample that are in the Metals Industry Sector
